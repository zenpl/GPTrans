# Database Configuration
DATABASE_URL=postgresql://gptrans:password@localhost:5432/gptrans

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Translation Provider Configuration
# Options: mock, openai, claude
TRANSLATION_PROVIDER=mock

# OpenAI Configuration (if using OpenAI provider)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Claude Configuration (if using Claude provider)  
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Google Cloud Vision API (if using Google OCR provider)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/google-credentials.json

# OCR Provider Configuration
# Options: mock, google_vision
OCR_PROVIDER=mock

# File Upload Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_PAGES_PER_BOOK=500

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000